/* 订单卡片美化 */
.order-card {
  background: #fff;
  border-radius: 24rpx;
  margin: 24rpx 8rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.10);
  overflow: hidden;
  transition: box-shadow 0.2s;
  padding-bottom: 18rpx;
}

/* 订单头部 */
.order-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx 10rpx 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
  background: #fcfcfe;
}
.order-no {
  color: #222;
  font-size: 26rpx;
  font-weight: 600;
}
.order-time {
  color: #888;
  font-size: 24rpx;
}
.order-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  background: linear-gradient(90deg, #57d78d, #5fc6ec);
  color: #fff;
  letter-spacing: 2rpx;
}

/* 菜品列表 */
.dish-list {
  padding: 4rpx 18rpx 0 18rpx;
}
.dish-item {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f3f4f6;
  padding: 16rpx 0;
}
.dish-item:last-child { border-bottom: none; }

.dish-img {
  width: 76rpx;
  height: 76rpx;
  border-radius: 12rpx;
  object-fit: cover;
  margin-right: 16rpx;
  background: #f5f5f5;
}

/* 菜品内容 */
.dish-detail {
  flex: 1;
  min-width: 0;
}
.dish-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.dish-meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: 600;
}
.dish-meta .dish-price {
  color: #ff6b35;
  font-weight: 600;
}
.dish-meta .dish-x {
  font-size: 22rpx;
  color: #bbb;
  font-weight: 400;
  background: #f5f5f7;
  border-radius: 20rpx;
  padding: 2rpx 10rpx;
  margin: 0 6rpx;
}
.dish-meta .dish-subtotal {
  font-size: 24rpx;
  color: #222;
  margin-left: 16rpx;
  font-weight: 600;
}

/* 卡片底部 */
.order-card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 24rpx 0 24rpx;
}
.order-summary {
  color: #888;
  font-size: 22rpx;
}
.reorder-btn {
  background: linear-gradient(90deg, #88aaff, #7852e8);
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  border-radius: 28rpx;
  padding: 10rpx 36rpx;
  margin-left: 18rpx;
}

