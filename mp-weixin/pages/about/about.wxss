/* 关于我们页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 0 0 40rpx 0;
}

/* 顶部标题区域 */
.header-section {
  background: linear-gradient(135deg, #007AFF 0%, #0056D6 100%);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.header-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  border-radius: 24rpx;
  background: rgba(255,255,255,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 1;
}

.app-logo image {
  width: 80rpx;
  height: 80rpx;
}

.app-info {
  color: white;
  position: relative;
  z-index: 1;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

.app-version {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.app-desc {
  display: block;
  font-size: 32rpx;
  opacity: 0.95;
  font-weight: 300;
}

/* 通用区块样式 */
.section {
  background: white;
  margin: 24rpx 24rpx 0;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  transition: transform 0.3s ease;
}

.section:active {
  transform: scale(0.98);
}

.section-title {
  padding: 32rpx 32rpx 24rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
}

.section-title text {
  margin-left: 16rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

.section-content {
  padding: 32rpx;
}

.content-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #5a6c7d;
  text-align: justify;
}

/* 功能列表 */
.feature-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.feature-item:active {
  background: linear-gradient(135deg, #e9ecef 0%, #f8f9fa 100%);
  transform: translateY(2rpx);
}

.feature-item text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #495057;
  font-weight: 500;
}

/* 版本更新 */
.update-item {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #007AFF;
}

.update-item:last-child {
  margin-bottom: 0;
}

.update-version {
  font-size: 32rpx;
  font-weight: 600;
  color: #007AFF;
  margin-bottom: 16rpx;
}

.update-list text {
  display: block;
  font-size: 28rpx;
  color: #6c757d;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.update-list text:last-child {
  margin-bottom: 0;
}

/* 团队信息 */
.team-info {
  text-align: center;
}

.team-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.team-desc {
  display: block;
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.contact-item text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #495057;
}

/* 政策链接 */
.policy-links {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.policy-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.policy-item:active {
  background: linear-gradient(135deg, #e9ecef 0%, #f8f9fa 100%);
  transform: translateX(8rpx);
}

.policy-item text {
  font-size: 32rpx;
  color: #495057;
  font-weight: 500;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  margin-top: 40rpx;
}

.copyright {
  display: block;
  font-size: 24rpx;
  color: #adb5bd;
  margin-bottom: 8rpx;
}

.company {
  display: block;
  font-size: 24rpx;
  color: #adb5bd;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .feature-list {
    grid-template-columns: 1fr;
  }
  
  .app-name {
    font-size: 42rpx;
  }
  
  .section {
    margin: 20rpx 16rpx 0;
  }
}
